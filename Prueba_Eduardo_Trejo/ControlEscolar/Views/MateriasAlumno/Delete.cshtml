@model ControlEscolar.Models.Entidades.Kardex

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de eliminar el Kardex de @Model.Nombre?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Edad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Edad)
        </dd>
    </dl>
    <div class="row">
        <div class="col-2">
            <label class="text-center fw-bold fs-5">Materias</label>
            @foreach (var item in Model.Materias)
            {
                <div>
                    @Html.DisplayFor(modelItem => item.Estatus)
                    @Html.DisplayFor(modelItem => item.Nombre)
                </div>
            }
        </div>
        <div class="col-3">
            <p class="text-center fw-bold fs-5">Créditos</p>
            <p class="text-center fw-bold fs-4 my-3 py-3 border border-2">@Model.Creditos</p>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a listado de alumnos</a>
    </form>
</div>
